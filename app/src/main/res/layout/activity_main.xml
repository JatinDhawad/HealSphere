<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Profile"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/tvCurrentProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Profile: -"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"/>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_person"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_bg"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/icEditProfile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_edit"
                android:background="@drawable/edit_icon_bg"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                android:padding="6dp"
                android:visibility="gone" />
        </FrameLayout>



        <EditText
            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Name"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/etUserAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Age"
            android:inputType="number"/>

        <EditText
            android:id="@+id/etUserContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/etEmergencyContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Emergency Contact Number"
            android:inputType="phone"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnCallEmergency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ž Call Emergency Contact"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btnSendSOS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸš¨ Send SOS Message"
            android:layout_marginTop="6dp"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white"/>



        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnSwitchProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switch Profile"
            android:layout_marginTop="8dp" />



        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Medicine Name"/>

        <EditText
            android:id="@+id/etDosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dosage"/>

        <EditText
            android:id="@+id/etTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Time (HH:MM)"/>

        <EditText
            android:id="@+id/etNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notes"/>

        <Button
            android:id="@+id/btnAttach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attach Prescription"/>

        <TextView
            android:id="@+id/tvImageStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No image selected"
            android:layout_marginTop="4dp"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Medicine"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnDoctors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctors &amp; Pharmacies"
            android:layout_marginTop="12dp"/>


        <Button
            android:id="@+id/btnDailyReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Today's Report"
            android:layout_marginTop="10dp" />


        <Button
            android:id="@+id/btnView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Medicines"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#CCCCCC"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#CCCCCC"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/tvWaterHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’§ Water Intake Tracker"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/tvWaterCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glasses taken: 0 / 8"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnAddWater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add a Glass ðŸ’§"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnResetWater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Count ðŸ”„" />

        <TextView
            android:id="@+id/tvVitalsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Health Vitals"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/etBP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Blood Pressure (e.g., 120/80)"
            android:inputType="text" />

        <EditText
            android:id="@+id/etSugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Blood Sugar (mg/dL)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Weight (kg)"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btnSaveVitals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Vitals"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
